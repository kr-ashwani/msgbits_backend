{
  "compilerOptions": {
   "typeRoots": ["schema/types", "./node_modules/@types"],
    "types": ["node"],
    "noEmitOnError": true,
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

  },
  "lib": ["es2015"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}

